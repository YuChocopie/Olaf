<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:duration="2000"
        android:fromAlpha="1"
        android:repeatCount="-1"
        android:toAlpha="0.4" />
    <rotate
        android:duration="10000"
        android:fillAfter="true"
        android:fromDegrees="-3"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="-1"
        android:toDegrees="4" />
    <translate
        android:duration="15000"
        android:fromYDelta="-35%"
        android:repeatCount="-1"
        android:toYDelta="25%" />
</set>
