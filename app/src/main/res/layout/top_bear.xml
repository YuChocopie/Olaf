<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bear"
            type="com.mashupgroup.weatherbear.viewmodels.BearViewModel" />

        <variable
            name="bg"
            type="com.mashupgroup.weatherbear.viewmodels.BackgroundViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/topBearBgWrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bear_height"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/bearBg"
            layout="@layout/item_bear_background"
            bind:bg="@{bg}" />

        <LinearLayout
            android:id="@+id/bearWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent">

            <include
                layout="@layout/bear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:bear="@{bear}" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>