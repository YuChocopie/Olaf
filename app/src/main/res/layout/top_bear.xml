<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bear"
            type="com.mashupgroup.weatherbear.viewmodels.BearViewModel" />

        <variable
            name="bg"
            type="com.mashupgroup.weatherbear.viewmodels.BackgroundViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/topBearBgWrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bear_height"
        android:fitsSystemWindows="true">

        <include
            layout="@layout/item_bear_background"
            bind:bg="@{bg}" />

        <FrameLayout
            android:id="@+id/bearWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <include
                layout="@layout/bear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:bear="@{bear}" />

        </FrameLayout>

    </FrameLayout>
</layout>