<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bear"
            type="com.mashupgroup.weatherbear.BearModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bear_height">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_topbar_height"
            android:layout_gravity="bottom|center"
            android:scaleType="centerCrop"
            android:src="@drawable/background_far_mountain"
            tools:ignore="ContentDescription" />

        <FrameLayout
            android:id="@+id/bearWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <include
                layout="@layout/bear"
                bind:bear="@{bear}" />

        </FrameLayout>

    </FrameLayout>
</layout>