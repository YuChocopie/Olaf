<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.drawable.Drawable" />

        <import type="android.view.View" />

        <variable
            name="isDayData"
            type="com.mashupgroup.weatherbear.viewmodels.IsDayViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/todayTemperatures"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_weather_box_hight"
        android:layout_marginTop="@dimen/item_weather_box_margin_top"
        android:background="@drawable/weather_box">

        <TextView
            android:id="@+id/TodayTemperaturesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/weather_box_tv_margin_top"
            android:text="@string/today_temperatures"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mashupgroup.weatherbear.GraphViewDay
            android:id="@+id/GraphViewTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutLinearlayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TodayTemperaturesText"
            app:lineColor="#707070"
            app:lineThickness="2dp"
            app:pointSize="8dp"
            app:textColor="#858585"
            app:textGap="10dp"
            app:textSize="11sp" />

        <LinearLayout
            android:id="@+id/layoutLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:weightSum="8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivTodayTimeWeather0"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@{isDayData.ivTodayTimeWeather00}" />
                <TextView
                    android:id="@+id/tvTodayTime0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime00}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@{isDayData.ivTodayTimeWeather01}" />

                <TextView
                    android:id="@+id/tvTodayTime01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime01}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@{isDayData.ivTodayTimeWeather02}"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTodayTime02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime02}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@{isDayData.ivTodayTimeWeather03}"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTodayTime03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime03}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@{isDayData.ivTodayTimeWeather04}"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTodayTime04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime04}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@{isDayData.ivTodayTimeWeather05}"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTodayTime05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime05}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather6"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@{isDayData.ivTodayTimeWeather06}"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTodayTime06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime06}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/SIZE_24"
                android:layout_height="54dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivTodayTimeWeather7"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@{isDayData.ivTodayTimeWeather07}"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTodayTime07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@{isDayData.tvTodayTime07}"
                    android:textColor="@color/black6"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
